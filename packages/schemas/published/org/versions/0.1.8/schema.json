{
  "$id": "https://github.com/0xLighthouse/ens-node-metadata/schemas/org/0.1.5",
  "source": "https://github.com/0xLighthouse/ens-node-metadata",
  "title": "Organization",
  "version": "0.1.8",
  "description": "A legal or organizational entity.",
  "type": "object",
  "properties": {
    "class": {
      "type": "string",
      "default": "Organization",
      "description": "High-level identifier of this node type",
      "examples": [
        "Organization",
        "Foundation",
        "OPCo"
      ]
    },
    "name": {
      "type": "string",
      "description": "The name of this business unit"
    },
    "avatar": {
      "type": "string",
      "description": "A URL to an image used as an avatar or logo"
    },
    "description": {
      "type": "string",
      "description": "A description of the name"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "URL of the organization"
    }
  },
  "required": [
    "class"
  ],
  "recommended": [
    "name",
    "avatar",
    "description",
    "url"
  ]
}
